@page "/"
@using C1.Chart
@using C1.Blazor.Chart
@using System.IO
@using ResiliencePatternsDotNet.Commons
@using BlazorInputFile
@using Newtonsoft.Json

<InputFile OnChange="HandleFileSelected" Multiple/>

<FlexChart HeaderContent="Tempo médio das requisições bem sucedidas" ChartType="ChartType.Funnel">
    <SeriesCollection>
        @foreach (var chart in charts)
        {
            <Series Name="@chart.ScenarioFileName" Binding="TotalSuccessTimePerRequest" ItemsSource="@chart.ScenarioResults"/>
        }
    </SeriesCollection>
</FlexChart>

@foreach (var chart in charts)
{
}

@code {
    private List<ScenarioChart> charts = new List<ScenarioChart>();
    async Task HandleFileSelected(IFileListEntry[] files)
    {
        charts = new List<ScenarioChart>();
        foreach (var arquivo in files)
        {
            using (var streamReader = new StreamReader(arquivo.Data))
            {
                charts.Add(new ScenarioChart
                {
                    ScenarioFileName = arquivo.Name,
                    ScenarioResults = JsonConvert.DeserializeObject<MetricStatus[]>(await streamReader.ReadToEndAsync()).ToList()
                });
            }
        }
    }
}